                            thead
                                tr.dropup
                                    th Word
                                    th POS
                                    th Synonym
                                    th Rating
                                    th(style="width: 15%;") Actions
                            tbody#users
                                each word in words
                                    - for (var i=0; i<word.syn.length; i++)
